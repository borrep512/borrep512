[bar/example]
width = 100%
height = 28
background = #1e1e2e
foreground = #cdd6f4
font-0 = "JetBrains Mono:size=12;1"
font-1 = "Font Awesome 6 Free:size=12;1"

modules-left = bspwm
modules-center = date
modules-right = cpu memory

[module/bspwm]
type = internal/bspwm

[module/date]
type = internal/date
interval = 5
format = %Y-%m-%d %H:%M:%S

[module/cpu]
type = internal/cpu
interval = 2
format = CPU: %percentage%%

[module/memory]
type = internal/memory
interval = 2
format = RAM: %used%/%total%
