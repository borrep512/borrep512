sudo pacman -S hyprland xorg-xwayland wayland wl-clipboard kitty xdg-desktop-portal xdg-desktop-portal-wlr
mkdir -p ~/.config/hypr

echo '' > ~/.config/hypr/hyprland.conf

cat <<EOL >> "~/.config/hypr/hyprland.conf"

# Monitor (VirtualBox suele usar Virtual-1)
monitor=,preferred,auto,1

# Teclas bÃ¡sicas
bind=SUPER+Return,exec,alacritty
bind=SUPER+Q,killactive
bind=SUPER+D,exec,alacritty

# Copiar/pegar
exec-once=wl-paste --watch clipman store &

# Opciones simples
general {
    gaps_in=5
    gaps_out=10
    border_size=2
    col.active_border=0x88ffffff
    col.inactive_border=0x88222222
}
EOL

sudo pacman -S greetd greetd-gtkgreet

echo '' >  "/etc/greetd/config.toml"

cat <<EOL >> "/etc/greetd/config.toml"

[terminal]
vt = 1

[default_session]
command = "hyprland"
user = "herculex"
EOL

sudo systemctl enable greetd
sudo systemctl start greetd
